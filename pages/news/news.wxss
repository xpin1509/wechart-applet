.navBar{
    background: #4998e7;
    padding:5px 0;
    display:flex;
    display:-webkit-flex;
	font-family:"Microsoft YaHei";
}
.navCells{
	width:20%;
	color:#fff;
	text-align:center;
}
swiper{
	height:380rpx
}
.swiperItem{
	position: relative;
	width:100%;
	height:100%
}
.slide-image{
	width:100%;
	height:100%
}
.slide-text{
	position: absolute;
	bottom:16px;
	left:20px;
	color:#fff;
	font-size:16px
}
.newsWraper{
	padding:0 16rpx;
	color: #111;
}
.newsWraper .newsItems{
	padding:20rpx 0;
	border-bottom: 0.5px solid #e3e4e5;
}
.newsItemsImgBox{
	width:208rpx;
	height:152rpx;
	display:inline-block;
}
.newsItemsImgBox .newsItemsImg{
	width:100%;
	height:100%;
}
.newsItemsRight{
	display:inline-block;
	width: 468rpx;
	float: right;
}
.newsItemsTitle{
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	font-size:16px;
}
.newsItemsTime{
	margin-top:35rpx;
	color: #878c92;
	font-size:14px;
}















