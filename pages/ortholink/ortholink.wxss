.navBar{
	display:-webkit-flex;
	display:flex;
	text-align:center;
	line-height: 80rpx;
}
.navCells{
	-webkit-flex:1;
	flex:1;
}
.videoItem{
	display:block;
	width:100%;
	height:420rpx
}
.product{
	margin-top:44rpx;
	text-align:center;
	font-weight:500
}
.product-cells{
	height: 486rpx;
    margin: 100rpx auto 0;
    position: relative;
    color: #333;
    background-image: url('http://www.ortholink.cn/include/mt/images/index/@2x_5.png');
    background-position: center top;
    background-size: 100%;
    background-repeat: no-repeat;
}
.product-cell {
    width: 108rpx;
    height: 100rpx;
    position: absolute;
    font: 26rpx/32rpx "microsoft yahei";
}
.product-cell-img{
	height: 68rpx;
    background-image: url('http://www.ortholink.cn/include/mt/images/index/@2x_3.png');
    background-size: 100%;
}
.digital-cell{
	left: 50rpx;
    top: 290rpx;
}
.measure-cell{
    left: 50rpx;
    top: 122rpx;
}
.measure-cell .product-cell-img{
	background-position: center -76rpx;
}
.simulate-cell{
	left: 160rpx;
    top: 0rpx;
}
.simulate-cell .product-cell-img{
    background-position: center -148rpx;
}
.guide-cell{
	right: 160rpx;
    top: 0rpx;
}
.guide-cell .product-cell-img{
	background-position: center -222rpx;
}
.manage-cell{
	right: 50rpx;
    top: 122rpx;
}
.manage-cell .product-cell-img{
	background-position: center -296rpx;
}
.trains-cell{
	right: 50rpx;
    top: 290rpx;
}
.trains-cell .product-cell-img{
    background-position: center -374rpx;
}
.feature{
	text-align: center;
}
.sectionTitle{
    font: 36rpx/68rpx "microsoft yahei";
    color: #333333;
}
.sectionTitle:after{
	display: block;
    content: '';
    width: 56rpx;
    height: 6rpx;
    margin: auto;
    background-color: #1a89d9;
}
.feature .feature-cells {
    padding:32rpx 12rpx;
}





